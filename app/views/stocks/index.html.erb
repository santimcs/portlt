<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Market</th>
      <th>Price</th>
      <th>Max price</th>
      <th>Min price</th>
      <th>Pe</th>
      <th>Pbv</th>
      <th>Paid up</th>
      <th>Market cap</th>
      <th>Daily vol</th>
      <th>Beta</th>
      <th>Ticker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.market %></td>
        <td><%= stock.price %></td>
        <td><%= stock.max_price %></td>
        <td><%= stock.min_price %></td>
        <td><%= stock.pe %></td>
        <td><%= stock.pbv %></td>
        <td><%= stock.paid_up %></td>
        <td><%= stock.market_cap %></td>
        <td><%= stock.daily_volume %></td>
        <td><%= stock.beta %></td>
        <td><%= stock.ticker_id %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

